{
    "name": "toni/demo",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.5.9",
        "symfony/symfony": "3.1.*",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/monolog-bundle": "^2.8",
        "symfony/polyfill-apcu": "^1.0",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.0",
        "friendsofsymfony/user-bundle": "~2.0@dev",
        "jms/serializer-bundle": "^1.1",
        "friendsofsymfony/rest-bundle": "^2.1",
        "nelmio/cors-bundle": "^1.4",
        "symfony/psr-http-message-bridge": "^1.0",
        "white-october/pagerfanta-bundle": "^1.0",
        "willdurand/hateoas-bundle": "^1.2",
        "nelmio/api-doc-bundle": "^2.13",
        "lexik/jwt-authentication-bundle": "^2.0",
        "fzaninotto/faker": "^1.6",
        "doctrine/doctrine-fixtures-bundle": "^2.3",
        "phpspec/phpspec": "^3.1",
        "henrikbjorn/phpspec-code-coverage": "^3.0"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.0",
        "symfony/phpunit-bridge": "^3.0",
        "phpunit/phpunit": "^5.6",
        "zendframework/zend-diactoros": "^1.3",
        "behat/behat": "^3.2",
        "behat/mink-extension": "^2.2",
        "behat/mink-selenium2-driver": "^1.3",
        "behat/mink": "^1.7",
        "se/selenium-server-standalone": "^2.53",
        "liip/functional-test-bundle": "^1.6"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-install-cmd": [
            "@symfony-scripts",
            "php ./bin/console doctrine:schema:update --force -n",
            "php ./bin/console frontend:install"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "env-map": {
                "secret": "SYMFONY_SECRET",
                "jwt_key_pass_phrase": "JWT_KEY_PASS_PHRASE",
                "database_url": "DATABASE_URL",
                "monolog_action_level": "LOG_LEVEL",
                "demo.backend_url": "DEMO_BACKEND_URL",
                "demo.frontend_url": "DEMO_FRONTEND_URL"
            }
        }
    }
}
